@model Potatotech.GestaoRestaurante.Web.ViewModels.TipoProdutoViewModel
@{
    ViewBag.Title = "Listar";
}


<div class="x_panel">
    <div class="x_title">

        <div class="row">
            <div class="col-md-11">
                <h2>Lista de Tipo de Produto</h2>
            </div>
            <div class="col-md-1">
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#Cadastrar">
                    +
                </button>
            </div>

        </div>

    </div>
    <div class="x_content">

        <table class="table table-hover">
            <thead class="row">
                <tr>
                    <th class="col-md-5">Cod.</th>
                    <th class="col-md-5">Nome</th>
                    <th class="col-md-2">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tp in Model.TiposProduto)
                {
                    <tr>
                        <td>@tp.Id</td>
                        <td>@tp.Nome</td>
                        <td>
                            <button data-id="@tp.Id" class="btn btn-primary edit" data-toggle="modal" data-target="#Editar">Editar</button>
                            <button onclick="tipoId.value = @tp.Id" type="button" class="btn btn-danger" data-toggle="modal" data-target="#Deletar">Apagar</button>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        @Html.Partial("_cadastrar")
        @Html.Partial("_editar")
        @Html.Partial("_deletar")

    </div>
</div>

@section scripts{
    <script>
        $().ready(function () {
            $(".edit").click(function () {
                $.ajax({
                    url: "http://localhost:8014/api/TipoProduto/" + $(this).data("id"),
                    method: "GET",
                    success: function (data) {
                        $("#cod").val(data.Id);
                        $("#nm").val(data.Nome);
                    }
                })
            })
        })
    </script>
   
    
    }

