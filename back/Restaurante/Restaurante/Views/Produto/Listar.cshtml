@model Potatotech.GestaoRestaurante.Web.ViewModels.ProdutoViewModel

@{
    ViewBag.Title = "Listar";
}


<div class="x_panel">
    <div class="x_title">

        <div class="row">
            <div class="col-md-11">
                <h2>Lista Produto</h2>
            </div>
            <div class="col-md-1">
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#Cadastrar">
                    +
                </button>
            </div>
        </div>

    </div>
    <div class="x_content">
        <table class="table table-hover">
            <thead class="row">
                <tr>
                    <th class="col-md-2">Cod.</th>
                    <th class="col-md-2">Nome</th>
                    <th class="col-md-2">Valor</th>
                    <th class="col-md-2">Imposto</th>
                    <th class="col-md-2">Tipo do Produto</th>
                    <th class="col-md-2">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Produtos)
                {
                    <tr>
                        <th>@p.Id</th>
                        <th>@p.Nome</th>
                        <th>@p.Valor</th>
                        <th>@p.Imposto</th>
                        <th>@p.TipoProduto.Nome</th>
                        <td>
                            <button data-id="@p.Id"  class="btn btn-primary edit" data-toggle="modal" data-target="#Editar">Editar</button>
                            <button onclick="pId.value = @p.Id " type="button" class="btn btn-danger" data-toggle="modal" data-target="#Deletar">Apagar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.Partial("_cadastrar")
        @Html.Partial("_editar")
        @Html.Partial("_deletar")
    </div>
</div>

@section scripts{
    <script>
        $().ready(function () {
            $(".edit").click(function () {
                $.ajax({
                    url: "http://localhost:8014/api/Produto/" + $(this).data("id"),
                    method: "GET",
                    success: function (data) {
                        $("#cd").val(data.Id);
                        $("#idTipo").val(data.TipoId);
                        $("#nome").val(data.Nome);
                        $("#valor").val(data.Valor);
                        $("#imposto").val(data.Imposto)
                    }
                })
            })
        })
    </script>
    
    }

